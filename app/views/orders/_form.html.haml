= form_for(@order) do |f|
  - if @order.errors.any?
    #error_explanation
      %h2
        = pluralize(@order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    / START_HIGHLIGHT
    = f.text_field :name, size: 40
    / END_HIGHLIGHT
  .field
    = f.label :address
    %br/
    / START_HIGHLIGHT
    = f.text_area :address, rows: 3, cols: 40
    / END_HIGHLIGHT
  .field
    = f.label :email
    %br/
    / START_HIGHLIGHT
    = f.email_field :email, size: 40
    / END_HIGHLIGHT
  .field
    = f.label :pay_type
    %br/
    / START_HIGHLIGHT
    = f.select :pay_type, Order::PAYMENT_TYPES, |
      prompt: 'Select a payment method'         |
    / END_HIGHLIGHT
  .actions
    / START_HIGHLIGHT
    = f.submit 'Place Order'
    / END_HIGHLIGHT