/ START:explanation
= form_for(@order) do |f|
  - if @order.errors.any?
    #error_explanation
      / START_HIGHLIGHT
      %h2
        = raw t('errors.template.header', count: @order.errors.count, |
          model: t('activerecord.models.order'))                      |
        \.
      %p= t('errors.template.body')
      / END_HIGHLIGHT
      %ul
        - @order.errors.full_messages.each do |msg|
          / START_HIGHLIGHT
          %li= raw msg
          / END_HIGHLIGHT
  / ...
  / END:explanation
  .field
    / START_HIGHLIGHT
    = f.label :name, t('.name')
    %br/
    / END_HIGHLIGHT
    = f.text_field :name, size: 40
  .field
    / START_HIGHLIGHT
    = f.label :address, t('.address_html')
    %br/
    / END_HIGHLIGHT
    = f.text_area :address, rows: 3, cols: 40
  .field
    / START_HIGHLIGHT
    = f.label :email, t('.email')
    %br/
    / END_HIGHLIGHT
    = f.email_field :email, size: 40
  .field
    / START_HIGHLIGHT
    = f.label :pay_type, t('.pay_type')
    %br/
    / END_HIGHLIGHT
    = f.select :pay_type, Order::PAYMENT_TYPES, |
      prompt: t('.pay_prompt_html')             |
    / END_HIGHLIGHT
  .actions
    / START_HIGHLIGHT
    = f.submit t('.submit')
    / END_HIGHLIGHT